<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='jackembedded'>
	<inherits name='com.google.gwt.user.User' />

	<inherits name='com.allen_sauer.gwt.dnd.gwt-dnd' />
	<inherits name="com.google.gwt.inject.Inject" />
	<inherits name="com.google.common.Collect" />
	<inherits name="com.google.gwt.validation.Validation" />

	<entry-point class='com.christophdietze.jack.client.EmbeddedEntryPoint' />

	<!-- see also http://code.google.com/p/gwt-log/wiki/GettingStarted -->
	<inherits name="com.allen_sauer.gwt.log.gwt-log-DEBUG" />
	<set-property name="log_DivLogger" value="DISABLED" />
	<set-property name="log_SystemLogger" value="DISABLED" />

	<source path='client' />
	<source path='shared' />

	<stylesheet src="jack.css" />

	<add-linker name="xs" />
</module>
