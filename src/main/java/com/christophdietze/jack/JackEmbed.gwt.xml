<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='jackembed'>

	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.allen_sauer.gwt.dnd.gwt-dnd' />
	<inherits name="com.google.gwt.inject.Inject" />
	<inherits name="com.google.common.collect.Collect" />
	<inherits name="com.google.gwt.validation.Validation" />

	<entry-point class='com.christophdietze.jack.client.embed.EmbedEntryPoint' />

	<!-- see also http://code.google.com/p/gwt-log/wiki/GettingStarted -->
	<inherits name="com.allen_sauer.gwt.log.gwt-log-OFF" />
	<!-- To turn logging on uncomment below -->
	<!-- inherits name="com.allen_sauer.gwt.log.gwt-log-DEBUG" /> <set-property 
		name="log_DivLogger" value="DISABLED" /> <set-property name="log_SystemLogger" 
		value="DISABLED" / -->

	<set-configuration-property name="UiBinder.useSafeHtmlTemplates"
		value="true" />

	<source path='client' />
	<source path='shared' />

	<stylesheet src="jack.css" />

	<add-linker name="xsiframe" />
</module>
