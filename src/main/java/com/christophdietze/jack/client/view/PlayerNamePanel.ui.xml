<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.christophdietze.jack.client.resources.MyClientBundle"
		field="bundle" />
	<ui:style
		type="com.christophdietze.jack.client.view.PlayerNamePanel.MyStyle">
			.playerToMove {
				font-weight: bold;
			}
	</ui:style>
	<g:HTMLPanel>
		<g:Image resource="{bundle.blackPlayerIcon}" />&nbsp;<g:InlineLabel ui:field="upperPlayerLabel" />
		<br />
		<g:Image resource="{bundle.whitePlayerIcon}" />&nbsp;<g:InlineLabel ui:field="lowerPlayerLabel" />
	</g:HTMLPanel>
</ui:UiBinder> 