<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:com.christophdietze.jack.client.view">
	<ui:style>
		.commandView {
			padding-left: 1em;
		}
		
		.boardView {
			float: left;
		}
		
		.playerNamePanel {
			float: left;
			margin-left: 1em;
			margin-top: 0.5em;
		}
		
		.eventPanel {
			margin-left: 1em;
			margin-right: 1em;
		}
	</ui:style>

	<!-- 	<g:HTMLPanel styleName="{style.rootPanel}"> -->
	<g:DockLayoutPanel unit="EM">
		<g:north size="1.5">
			<g:HTML></g:HTML>
		</g:north>
		<g:west size="18">
			<g:LayoutPanel>
				<g:layer>
					<v:CommandView styleName="{style.commandView}" />
				</g:layer>
				<g:layer top="145px" height="16.5em">
					<v:EventPanel styleName="{style.eventPanel}" />
				</g:layer>
			</g:LayoutPanel>
		</g:west>
		<g:center>
			<g:FlowPanel>
				<v:BoardView addStyleNames="{style.boardView}" />
				<v:PlayerNamePanel styleName="{style.playerNamePanel}" />
			</g:FlowPanel>
		</g:center>
	</g:DockLayoutPanel>
	<!-- 	</g:HTMLPanel> -->
</ui:UiBinder>
